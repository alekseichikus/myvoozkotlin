<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundFill"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:background="@color/backgroundContent">
            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:elevation="0dp">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:titleTextAppearance="@style/ActionBar.nameText"
                    app:title="@string/title_profile"
                    app:menu="@menu/menu_profile"
                    android:background="@color/backgroundContent"/>
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_photo_container"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/backgroundFill"
                app:cardCornerRadius="50dp"
                app:cardElevation="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appbar">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_user"
                    app:tint="@color/textTertiary" />

                <ImageView
                    android:id="@+id/iv_user_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_user_name"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                android:text="Мокшанцев А"
                android:gravity="center"
                android:textColor="@color/textPrimary"
                android:textSize="24dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_photo_container"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_user_group"
                android:gravity="center"
                android:layout_marginHorizontal="16dp"
                android:textColor="@color/textTertiary"
                android:text="ИБ-416"
                android:textSize="14dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_user_name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:background="@color/backgroundContent"
            android:foreground="?android:selectableItemBackground"
            android:id="@+id/ll_notification_button"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_group"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_bells"
                android:layout_gravity="center"
                app:tint="#c7c8c9"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:textColor="#000"
                android:textSize="16sp"
                android:maxLines="1"
                android:layout_weight="0.4"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:text="Настройка уведомлений"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_angle_right"
                android:layout_gravity="center"
                app:tint="@color/textTertiary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:background="@color/backgroundContent"
            android:foreground="?android:selectableItemBackground"
            android:id="@+id/vk_group_button"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_vk"
                android:layout_gravity="center"
                app:tint="#5c9ce6">
            </ImageView>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:textColor="#000"
                android:textSize="16sp"
                android:maxLines="1"
                android:layout_weight="0.4"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:text="Сообщество в вк"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_angle_right"
                android:layout_gravity="center"
                app:tint="@color/textTertiary" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f4f5">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@color/backgroundContent"
            android:foreground="?android:selectableItemBackground"
            android:id="@+id/about_info_button"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_info_circle"
                android:layout_gravity="center"
                app:tint="#c7c8c9">
            </ImageView>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:textColor="#000"
                android:textSize="16sp"
                android:maxLines="1"
                android:layout_weight="0.4"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:text="О приложении"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_angle_right"
                android:layout_gravity="center"
                app:tint="@color/textTertiary" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>