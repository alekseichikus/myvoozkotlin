<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="166dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="150dp"
        app:cardCornerRadius="16dp"
        android:id="@+id/item_news"
        app:cardBackgroundColor="#e7e8e9"
        app:cardElevation="20dp"
        android:outlineAmbientShadowColor="@color/textTertiary"
        android:outlineSpotShadowColor="@color/textTertiary"
        android:foreground="?android:selectableItemBackground"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/item_image"
            android:src="@drawable/gradient_dark_linear"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gradient_dark_linear"
            android:scaleType="centerCrop"/>
        <androidx.cardview.widget.CardView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:cardCornerRadius="10dp"
            android:alpha="0.7"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp">
            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/tv_union"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item Title"
                android:textColor="#fff"
                android:textSize="14sp"
                android:maxLines="3"
                android:alpha="0.7"
                android:ellipsize="end"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
