<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="1"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            app:cardBackgroundColor="#e1e4e5"
            app:cardElevation="0dp"
            app:cardCornerRadius="16dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cv_container"
            android:layout_margin="1dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="16dp"
            android:layout_weight="0.8">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_name"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="1. Иностранный язык"
                    android:textSize="17sp"
                    android:layout_marginRight="16dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_type"
                    app:layout_constraintTop_toBottomOf="@+id/tv_name"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"
                    android:text="Лекция"
                    android:textSize="15sp"
                    android:layout_marginRight="16dp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:id="@+id/iv_marker"
                    android:layout_marginTop="8dp"
                    android:alpha="0.8"
                    android:src="@drawable/ic_map_marker_alt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_type"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/tv_place"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Дистанционно"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:alpha="0.8"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_marker"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/iv_marker"
                    app:layout_constraintTop_toTopOf="@+id/iv_marker" />

                <androidx.cardview.widget.CardView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:cardElevation="0dp"
                    android:id="@+id/cv_photo_container"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/iv_marker"
                    android:layout_marginTop="8dp"
                    android:alpha="0.8"
                    app:layout_constraintLeft_toLeftOf="parent"
                    tools:layout_editor_absoluteX="16dp">
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        android:alpha="0.8"
                        android:src="@drawable/ic_user"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_type"
                        app:tint="@color/white" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/tv_fio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Мокшанцев А.А."
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:alpha="0.8"
                    app:layout_constraintBottom_toBottomOf="@+id/cv_photo_container"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/cv_photo_container"
                    app:layout_constraintTop_toTopOf="@+id/cv_photo_container" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>